
<?xml version="1.0" ?>
<robot name="husky_robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="White">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  <material name="DarkGrey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="linkA">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.02467" iyz="0" izz="0.04411"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.0 0.05 0.1"/>
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.0 0.05 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="linkB">
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.02467" iyz="0" izz="0.04411"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.20 -0.025 0"/>
      <geometry>
        <box size="0.5 0.05 0.1"/>
      </geometry>
      <material name="DarkGrey"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.45 -0.025 0"/>
      <geometry>
        <box size="1.0 0.05 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="motor">
    <inertial>
      <mass value="2.637"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.02467" iyz="0" izz="0.04411"/>
    </inertial>
    <visual>
      <origin rpy="1.570795 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh scale="0.003 0.003 0.003" filename="diff_side.stl"/>
      </geometry>
      <material name="DarkGrey"/>
    </visual>
    
    <collision>
      <origin rpy="1.570795 0 0" xyz="0 0.05 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.045"/>
      </geometry>
    </collision>
  </link>


  <joint name="joint" type="revolute">
    <parent link="linkA"/>
    <child link="linkB"/>
    <limit lower="-1.8" upper="0.1"/>
    <origin rpy="0 0 0" xyz="0.45 -0.025 0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>

  <joint name="linkA_motor" type="continuous">
    <parent link="linkA"/>
    <child link="motor"/>
    <origin rpy="0 0 0" xyz="0.34 -0.1 0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>


</robot>